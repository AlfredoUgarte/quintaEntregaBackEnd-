<h1>Products View</h1>
{{#if products}}
    <div class="products-container">
        <div class="products-header">
            <p>Name</p>
            <p>Description</p>
            <p>Stock</p>
            <p>Price</p>
            <p>Picture</p>
        </div>
        <div class="products">
            {{#each products}}
                <div class="product-item">
                    <p>{{this.title}}</p>
                    <p>{{this.description}}</p>
                    <p>{{this.stock}}</p>
                    <p>$ {{this.price}}</p>
                    <img src="{{this.thumbnail}}" alt="image of {{this.title}}">
                </div>
            {{/each}}
        </div>
    </div>
{{else}}
    <div class="product-alert-container"><h2 class="product-alert">Products not found.</h2></div>
{{/if}}

<div class="form-container">
    <h1>Enter Product</h1>
    <form action="/api/products" method="POST">
        <label for="title">Title: </label>
        <input id="title" name="title">
        <label for="description">Description: </label>
        <input id="description" name="description">
        <label for="price">Price: </label>
        <input id="price" name="price">
        <label for="stock">Stock: </label>
        <input id="stock" name="stock">
        <label for="thumbnail">Thumbnail: </label>
        <input id="thumbnail" name="thumbnail">
        <input type="submit" class="btn btn-submit">
    </form>
</div>
<a class="btn btn-primary" href="/api/products/">To Products</a>
